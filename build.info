{-
     our $sover = $config{shlib_version_number};
     our $sover_filename = $sover;
     $sover_filename =~ s|\.|_|g
         if $config{target} =~ /^mingw/ || $config{target} =~ /^VC-/;
     $sover_filename =
         sprintf "%02d%02d", split m|\.|, $config{shlib_version_number}
         if $config{target} =~ /^vms/;
     "";
-}
LIBS=libtacrypto libtassl
INCLUDE[libtacrypto]=. crypto/include include
INCLUDE[libtassl]=. include
DEPEND[libtassl]=libtacrypto

# Empty DEPEND "indices" means the dependencies are expected to be built
# unconditionally before anything else.
DEPEND[]=include/openssl/opensslconf.h crypto/include/internal/bn_conf.h \
         crypto/include/internal/dso_conf.h
DEPEND[include/openssl/opensslconf.h]=configdata.pm
GENERATE[include/openssl/opensslconf.h]=include/openssl/opensslconf.h.in
DEPEND[crypto/include/internal/bn_conf.h]=configdata.pm
GENERATE[crypto/include/internal/bn_conf.h]=crypto/include/internal/bn_conf.h.in
DEPEND[crypto/include/internal/dso_conf.h]=configdata.pm
GENERATE[crypto/include/internal/dso_conf.h]=crypto/include/internal/dso_conf.h.in

IF[{- defined $target{shared_defflag} -}]
  IF[{- $config{target} =~ /^mingw/ -}]
    GENERATE[libtacrypto.def]=util/mkdef.pl crypto 32
    DEPEND[libtacrypto.def]=util/libtacrypto.num
    GENERATE[libtassl.def]=util/mkdef.pl ssl 32
    DEPEND[libtassl.def]=util/libtassl.num

    SHARED_SOURCE[libtacrypto]=libtacrypto.def
    SHARED_SOURCE[libtassl]=libtassl.def
  ELSIF[{- $config{target} =~ /^aix/ -}]
    GENERATE[libtacrypto.map]=util/mkdef.pl crypto aix
    DEPEND[libtacrypto.map]=util/libtacrypto.num
    GENERATE[libtassl.map]=util/mkdef.pl ssl aix
    DEPEND[libtassl.map]=util/libtassl.num

    SHARED_SOURCE[libtacrypto]=libtacrypto.map
    SHARED_SOURCE[libtassl]=libtassl.map
  ELSE
    GENERATE[libtacrypto.map]=util/mkdef.pl crypto linux
    DEPEND[libtacrypto.map]=util/libtacrypto.num
    GENERATE[libtassl.map]=util/mkdef.pl ssl linux
    DEPEND[libtassl.map]=util/libtassl.num

    SHARED_SOURCE[libtacrypto]=libtacrypto.map
    SHARED_SOURCE[libtassl]=libtassl.map
  ENDIF
ENDIF
# VMS and VC don't have parametrised .def / .symvec generation, so they get
# special treatment, since we know they do use these files
IF[{- $config{target} =~ /^VC-/ -}]
  GENERATE[libtacrypto.def]=util/mkdef.pl crypto 32
  DEPEND[libtacrypto.def]=util/libtacrypto.num
  GENERATE[libtassl.def]=util/mkdef.pl ssl 32
  DEPEND[libtassl.def]=util/libtassl.num

  SHARED_SOURCE[libtacrypto]=libtacrypto.def
  SHARED_SOURCE[libtassl]=libtassl.def
ELSIF[{- $config{target} =~ /^vms/ -}]
  GENERATE[libtacrypto.opt]=util/mkdef.pl crypto "VMS"
  DEPEND[libtacrypto.opt]=util/libtacrypto.num
  GENERATE[libtassl.op]=util/mkdef.pl ssl "VMS"
  DEPEND[libtassl.op]=util/libtassl.num

  SHARED_SOURCE[libtacrypto]=libtacrypto.opt
  SHARED_SOURCE[libtassl]=libtassl.op
ENDIF

IF[{- $config{target} =~ /^(?:Cygwin|mingw|VC-)/ -}]
  GENERATE[libtacrypto.rc]=util/mkrc.pl libtacrypto
  GENERATE[libtassl.rc]=util/mkrc.pl libtassl

  SHARED_SOURCE[libtacrypto]=libtacrypto.rc
  SHARED_SOURCE[libtassl]=libtassl.rc
ENDIF

IF[{- $config{target} =~ /^Cygwin/ -}]
 SHARED_NAME[libtacrypto]=cygcrypto-{- $sover_filename -}
 SHARED_NAME[libtassl]=cygssl-{- $sover_filename -}
ELSIF[{- $config{target} =~ /^mingw/ -}]
 SHARED_NAME[libtacrypto]=libtacrypto-{- $sover_filename -}{- $config{target} eq "mingw64" ? "-x64" : "" -}
 SHARED_NAME[libtassl]=libtassl-{- $sover_filename -}{- $config{target} eq "mingw64" ? "-x64" : "" -}
ELSIF[{- $config{target} =~ /^VC-/ -}]
 SHARED_NAME[libtacrypto]=libtacrypto-{- $sover_filename -}{- $target{multilib} -}
 SHARED_NAME[libtassl]=libtassl-{- $sover_filename -}{- $target{multilib} -}
ENDIF

# VMS has a cultural standard where all libraries are prefixed.
# For OpenSSL, the choice is 'ossl$' (this prefix was claimed in a
# conversation with VSI, Tuesday January 26 2016)
# Also, it seems it's usual to have the pointer size the libraries
# were built for as part of the name.
IF[{- $config{target} =~ /^vms/ -}]
 RENAME[libtacrypto]=ossl$libtacrypto{- $target{pointer_size} -}
 RENAME[libtassl]=ossl$libtassl{- $target{pointer_size} -}
 SHARED_NAME[libtacrypto]=ossl$libtacrypto{- $sover_filename -}_shr{- $target{pointer_size} -}
 SHARED_NAME[libtassl]=ossl$libtassl{- $sover_filename -}_shr{- $target{pointer_size} -}
ENDIF
